{
    "name": "Play Code Eat Numerology",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "spencerwmiles.vscode-task-buttons"
            ]
        }
    },
    "postCreateCommand": "pip install -r python/requirements.txt && cd js && npm install && cd ..",
    "remoteUser": "vscode"
} 